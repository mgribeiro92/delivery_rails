<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this store from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

    <div class="form-group">
      <%= form.label :price, style: "display: block" %>
      <%= form.number_field :price, class: "form-control", step: "0.01" %>
  </div>

  <div class="form-group">
    <%= form.label :store, style: "display: block" %>
    <%= form.collection_select :store_id, @stores, :id, :name, { prompt: "Lojas..." }, { class: "form-control" } %>
  </div>


  <%= form.submit class: "btn btn-primary", style: "margin-top: 10px" %>

<% end %>


