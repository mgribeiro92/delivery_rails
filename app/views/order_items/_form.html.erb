<%= form_with(model: order_item) do |form| %>
  <% if order_item.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(order_item.errors.count, "erro") %> proibindo esse produto de ser salvo:</h2>
      <ul>
        <% order_item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="row">
    <div class="form-group col-3">
      <%= form.label :quantidade, style: "display: block" %>
      <%= form.number_field :amount, class: "form-control" %>
    </div>
    <div class="form-group col">
      <%= form.label :title, style: "display: block" %>
      <%= form.collection_select :product_id, @products, :id, :title, {}, { class: "form-control" } %>
    </div>
  </div>

  <% if @order %>
    <%= form.hidden_field :order_id, value: @order.id %>
  <% end %>

  <%= form.submit class:"btn-form" %>

<% end %>


