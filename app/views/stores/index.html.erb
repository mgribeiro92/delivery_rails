<p style="color: green"><%= notice %></p>

<h1>Stores</h1>
<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Usuario</th>
      <th>Ver loja</th>
    </tr>
  </thead>
  <tbody>
    <% @stores.each do |store| %>
    <tr>      
      <td><%= store.name %></td>
      <td><%= store.user.email %>
      <td> <%= link_to "Ver Loja", store %> </td>
    </tr>
    <% end %>
  </tbody>

</table>

<%= link_to "New store", new_store_path %>

<style>
  table {
    border-collapse: collapse;
    width: 800px;
  }

  th, td {
    border: 1px solid #ddd;
    padding: 8px;
    text-align: left;
  }

  tr:nth-child(even) {
    background-color: #f2f2f2;
  }

  th {
    background-color: #4CAF50;
    color: white;
  }
</style>
