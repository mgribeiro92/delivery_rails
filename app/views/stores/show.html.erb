<p style="color: green"><%= notice %></p>

<div class="store-info">
  <div class="store-name"><%= @store.name %></div>
  <%= link_to "Edit this store", edit_store_path(@store) %> |
  <%= link_to "Back to stores", stores_path %>
  <%= button_to "Destroy this store", @store, method: :delete, class:"store-destroy" %>
</div>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Pre√ßo</th>
      <th>Ver Produto</th>
    </tr>
  </thead>
  <tbody>
    <% @store.products.each do |product| %>
    <tr>      
      <td><%= product.title %></td>
      <td><%= product.price %>
      <td> <%= link_to "Ver Produto", product %></td>
    </tr>
    <% end %>
  </tbody>

